<resources>
    <style name="MainTabItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/main_tab_item_bg</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/main_tab_item_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="RankTabItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/main_tab_item_text_color</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SettingGroupDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#e0e0e0</item>
    </style>

    <style name="HorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="spaceLeft">16dp</item>
        <item name="spaceColor">@android:color/transparent</item>
        <item name="android:background">@color/global_item_divider_color</item>
    </style>

    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/app_list_item_white</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">26dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:background">@drawable/view_dialog_top_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogVerticalDividerStyle">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/global_item_divider_color</item>
    </style>

    <style name="DialogHorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/global_item_divider_color</item>
    </style>
</resources>
